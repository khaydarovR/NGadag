@using NGadag.Data;
@model IEnumerable<NGadag.Models.Ad>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Услуги</h1>
<p>
    <a asp-action="Create">Создать услугу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th>
                Иконка
            </th>
            <th>
                Шапка
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>
            <td>
                    <img src="@Literals.PathForProdImg@item.Icon" class="img-thumbnail" style="height: 100px" alt="Responsive image" />
            </td>
            <td>
                    <img src="@Literals.PathForProdImg@item.Photo" class="img-thumbnail" style="height: 100px" alt="Responsive image" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
